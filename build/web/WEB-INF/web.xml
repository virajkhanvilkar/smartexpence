<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- ✅ LOGIN SERVLET -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>EditExpenseServlet</servlet-name>
    <servlet-class>servlets.EditExpenseServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>EditExpenseServlet</servlet-name>
    <url-pattern>/edit_expense</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>DeleteExpenseServlet</servlet-name>
    <servlet-class>servlets.DeleteExpenseServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>DeleteExpenseServlet</servlet-name>
    <url-pattern>/delete_expense</url-pattern>
</servlet-mapping>

    <!-- ✅ HOME SERVLET (Dashboard Loader) -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>


    <!-- ✅ ADD BALANCE SERVLET -->
    <servlet>
        <servlet-name>AddBalanceServlet</servlet-name>
        <servlet-class>servlets.AddBalanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBalanceServlet</servlet-name>
        <url-pattern>/add_balance</url-pattern>
    </servlet-mapping>


    <!-- ✅ ADD EXPENSE SERVLET -->
    <servlet>
        <servlet-name>AddExpenseServlet</servlet-name>
        <servlet-class>servlets.AddExpenseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddExpenseServlet</servlet-name>
        <url-pattern>/add_expense</url-pattern>
    </servlet-mapping>


    <!-- ✅ VIEW EXPENSES SERVLET -->
    <servlet>
        <servlet-name>ViewExpensesServlet</servlet-name>
        <servlet-class>servlets.ViewExpensesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewExpensesServlet</servlet-name>
        <url-pattern>/view_exp</url-pattern>
    </servlet-mapping>


    <!-- ✅ PREDICTION SERVLET -->
    <servlet>
        <servlet-name>PredictionServlet</servlet-name>
        <servlet-class>servlets.PredictionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PredictionServlet</servlet-name>
        <url-pattern>/predict</url-pattern>
    </servlet-mapping>


    <!-- ✅ REPORT SERVLET -->
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>servlets.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>


    <!-- ✅ DEFAULT (WELCOME) PAGE -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
